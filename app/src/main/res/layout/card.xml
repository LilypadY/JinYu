<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <!-- 这个是在容器中央的 -->



    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        tools:targetApi="lollipop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:stateListAnimator="@drawable/lift_on_touch"
        android:layout_margin="8dp"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:layout_weight="0.20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
            android:id="@+id/stc_cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="content"
            android:layout_margin="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
            <TextView
                android:id="@+id/stc_anal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="analysis"
                android:layout_below="@+id/stc_cont"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="6dp"
                android:layout_alignRight="@+id/stc_cont"
                android:layout_alignEnd="@+id/stc_cont"
                android:layout_alignLeft="@+id/stc_cont"
                android:layout_alignStart="@+id/stc_cont" />



          </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>

